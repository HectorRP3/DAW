{% extends "../base.njk" %}

{% block titulo %}Patient | Nuevo{% endblock %}

{% block content %}

    <h1>Inserci√≥n de nuevo physio</h1>

    {% if errores %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/physios" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name:</label>
            {% if errores.name %}
                <p class="text-danger">{{ errores.name }}</p>
            {% endif %}
            <input type="text" class="form-control" name="name" 
                placeholder="Name del physio..." >
        </div>
        <div class="form-group">
            <label for="surname">Surname:</label>
            {% if errores.surname %}
                <p class="text-danger">{{ errores.surname }}</p>
            {% endif %}
            <input type="text" class="form-control" name="surname" 
                placeholder="Surname del physio..." >
        </div>
        <div class="form-group">
            <label for="specialty">Specialty:</label>
            <select class="form-select" name="specialty">
              <option selected>Open this select menu</option>
              <option value="Sports">Sports</option>
              <option value="Neurological">Neurological</option>
              <option value="Pediatric">Pediatric</option>
              <option value="Geriatric">Geriatric</option>
              <option value="Oncological">Oncological</option>
            </select>
        </div>
        <div class="form-group">
          <label for="licensenumber">Lincense Number:</label>
            {% if errores.licenseNumber %}
                <p class="text-danger">{{ errores.licenseNumber }}</p>
            {% endif %}
            <input type="text" class="form-control" name="licensenumber"
                placeholder="License Number del physio." >
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" class="form-control" name="image"
                placeholder="Image del physio..." />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}
