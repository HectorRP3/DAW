{% extends "../base.njk" %}

{% block titulo %}Patient | Nuevo{% endblock %}

{% block content %}

    <h1>Inserci√≥n de nuevo patient</h1>

    {% if errores %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/patients" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name:</label>
            {% if errores.name %}
                <p class="text-danger">{{ errores.name }}</p>
            {% endif %}
            <input type="text" class="form-control" name="name" 
                placeholder="Name del patient..." >
        </div>
        <div class="form-group">
            <label for="surname">Surname:</label>            
            <input type="text" class="form-control" name="surname"
                placeholder="Surname del patient" >
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            {% if errores.address %}
                <p class="text-danger">{{ errores.address }}</p>
            {% endif %}
            <input type="text" class="form-control" name="address"
                placeholder="Address del patient." >
        </div>
        <div class="form-group">
            <label for="insuranceNumber">Insurance Number:</label>
            {% if errores.insuranceNumber %}
                <p class="text-danger">{{ errores.insuranceNumber }}</p>
            {% endif %}
            <input type="text" class="form-control" name="insuranceNumber"
                placeholder="Insurance Number del patient." >
        </div>
        <div class="form-group">
            <label for="birthDate">Birth Date:</label>
            {% if errores.birthDate %}
                <p class="text-danger">{{ errores.birthDate }}</p>
            {% endif %}
            <input type="date" class="form-control" name="birthDate"
                placeholder="Birth Date del patient." >
        </div>
        <div class="form-group">
            <label for="login">Login:</label>
            {% if errores.login %}
                <p class="text-danger">{{ errores.login }}</p>
            {% endif %}
            <input type="text" class="form-control" name="login"
                placeholder="Login del patient." >
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            {% if errores.password %}
                <p class="text-danger">{{ errores.password }}</p>
            {% endif %}
            <input type="password" class="form-control" name="password"
                placeholder="Password del patient.">
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" class="form-control" name="image"
                placeholder="image del patient..." />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}
