{% extends "../base.njk" %}

{% block titulo %}Libros | Ficha{% endblock %}

{% block content %}

    <h1>Ficha de Patient</h1>
    <div>
        {% if patient.image %}
            <p><img src="/public/uploads/{{ patient.image }}"></p>
        {% endif %}
        <p><strong>Name:</strong> {{ patient.name }}</p>
        <p><strong>Apellido:</strong> {{ patient.surname }}</p>
        <p><strong>InsuranceNumber:</strong> {{ patient.insuranceNumber }}</p>
        <p><strong>BirthDate:</strong> {{ patient.birthDate }}</p>
        <p><strong>Address:</strong> {{ patient.address }}</p>
    </div>
    <a class="btn btn-success" href="/patients">Volver al listado</a>
    <a class="btn btn-primary" href="/patients/{{ patient.id }}/edit">Editar</a>

{% endblock %}
